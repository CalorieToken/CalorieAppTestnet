#:import r src.utils.responsive
<FirstUseScreen>:
    ResponsiveContainer:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "Create Password"
        ContentScroll:
            ContentSection:
                MDLabel:
                    id: helper_label
                    text: "Create a password for your account"
                    font_style: "Title"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: rgba('#202443')
                    size_hint_y: None
                    height: str(r.scale_dp(40))
                    text_size: self.width, None
                Widget:
                    size_hint_y: None
                    height: SP_SM
                MDTextField:
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    id: password_input
                    hint_text: "Enter your password"
                    font_style: "Body"
                    size_hint_y: None
                    height: str(r.scale_dp(56))
                    helper_text: "Password will be used to encrypt your private keys."
                    helper_text_mode: "on_focus"
                    password: True
                    on_text: root.on_password_text(self.text)
                Widget:
                    size_hint_y: None
                    height: SP_XS
                MDTextField:
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    id: confirm_password_input
                    hint_text: "Confirm your password"
                    font_style: "Body"
                    size_hint_y: None
                    height: str(r.scale_dp(56))
                    helper_text: "Re-enter your password."
                    helper_text_mode: "on_focus"
                Widget:
                    size_hint_y: None
                    height: SP_SM
                MDBoxLayout:
                    size_hint_y: None
                    height: str(r.scale_dp(56))
                    padding: [0, 0]
                    MDButton:
                        id: create_button
                        style: "filled"
                        size_hint: (None, None)
                        width: r.scale_dp(BTN_W_XXL)
                        height: str(r.scale_dp(52))
                        radius: [24]
                        md_bg_color: rgba('#505CA9')
                        on_release: root.create_password()
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        MDButtonIcon:
                            icon: "lock-check"
                            icon_color: rgba('#f9b233')
                        MDButtonText:
                            text: "Create Password"
                            text_color: rgba('#008D36')
                Widget:
                    size_hint_y: None
                    height: SP_LG
        PrimaryBottomBar:

