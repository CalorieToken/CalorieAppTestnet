<MnemonicDisplayScreen>:
    MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "Recovery Phrase"
        MDScrollView:
            size_hint: (1, .75)
            do_scroll_x: False
            do_scroll_y: True
            bar_color: rgba ('#f9b233')
            
            MDGridLayout:
                cols: 1
                padding: "10dp"
                spacing: "15dp"
                size_hint_y: None
                height: self.minimum_height
                
                MDLabel:
                    text: "Write down these 12 words in order"
                    font_style: "Title"
                    theme_text_color: "Custom"
                    text_color: rgba('#202443')
                    halign: "center"
                    size_hint_y: None
                    height: "40dp"

                MDCard:
                    md_bg_color: rgba('#dadeed')
                    elevation: 2
                    padding: "15dp"
                    size_hint_y: None
                    height: self.minimum_height
                    
                    MDGridLayout:
                        id: mnemonic_grid
                        cols: 2
                        adaptive_height: True
                        spacing: "10dp"

                MDCard:
                    md_bg_color: rgba('#dadeed')
                    elevation: 2
                    padding: "10dp"
                    size_hint_y: None
                    height: self.minimum_height

                    MDGridLayout:
                        cols: 1
                        spacing: "5dp"
                        size_hint_y: None
                        adaptive_height: True

                        MDLabel:
                            id: public_key_label
                            text: "Public Key:"
                            theme_text_color: "Custom"
                            text_color: rgba('#505CA9')
                            size_hint_y: None
                            height: "20dp"
                            font_style: "Label"
                            
                        MDLabel:
                            id: public_key_display
                            text: ""
                            theme_text_color: "Custom"
                            text_color: rgba('#202443')
                            size_hint_y: None
                            height: "25dp"
                            font_size: "9sp"

                        MDLabel:
                            id: private_key_label
                            text: "Private Key:"
                            theme_text_color: "Custom"
                            text_color: rgba('#505CA9')
                            size_hint_y: None
                            height: "20dp"
                            font_style: "Label"
                            
                        MDLabel:
                            id: private_key_display
                            text: ""
                            theme_text_color: "Custom"
                            text_color: rgba('#202443')
                            size_hint_y: None
                            height: "25dp"
                            font_size: "9sp"

                        MDGridLayout:
                            cols: 3
                            size_hint_y: None
                            height: "40dp"
                            
                            MDLabel:
                            MDIconButton:
                                icon: "content-copy"
                                theme_icon_color: "Custom"
                                icon_color: rgba('#f9b233')
                                on_press: root.copy_keypair()
                            MDLabel:

                MDGridLayout:
                    cols: 3
                    size_hint_y: None
                    height: "60dp"

                    MDLabel:
                        size_hint: (4, 1)
                    MDButton:
                        style: "filled"
                        size_hint: (2, None)
                        height: "52dp"
                        radius: [24]
                        md_bg_color: rgba('#505CA9')
                        on_release: root.copy_mnemonic()
                        MDButtonIcon:
                            icon: "content-copy"
                            icon_color: rgba('#f9b233')
                        MDButtonText:
                            text: "Copy 12 Words"
                            text_color: rgba('#008D36')
                    MDLabel:
                        size_hint: (4, 1)

                MDGridLayout:
                    cols: 3
                    size_hint_y: None
                    height: "60dp"

                    MDLabel:
                        size_hint: (4, 1)
                    MDButton:
                        style: "filled"
                        size_hint: (2, None)
                        height: "52dp"
                        radius: [24]
                        md_bg_color: rgba('#505CA9')
                        on_release: root.confirm_mnemonic_saved()
                        MDButtonIcon:
                            icon: "check-circle"
                            icon_color: rgba('#f9b233')
                        MDButtonText:
                            text: "I Wrote It Down"
                            text_color: rgba('#008D36')
                    MDLabel:
                        size_hint: (4, 1)

                MDLabel:
                    size_hint_y: None
                    height: "20dp"

        # Bottom navigation bar
        MDGridLayout:
            cols: 3
            size_hint: (1, .08)
            canvas.before:
                Color:
                    rgba: rgba('#505CA9')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: "arrow-left"
                theme_icon_size: "Custom"
                icon_size: "24sp"
                theme_icon_color: "Custom"
                icon_color: rgba('#008D36')
                size_hint: (.15, 1)
                pos_hint: {"center_y": .5}
                on_press: root.go_back()
                canvas.before:
                    Color:
                        rgba: rgba('#bfc6e0')
                    RoundedRectangle:
                        pos: self.pos[0] + dp(5), self.pos[1] + dp(5)
                        size: self.size[0] - dp(10), self.size[1] - dp(10)
                        radius: [dp(8)]
            MDLabel:
                size_hint: (.85, 1)

