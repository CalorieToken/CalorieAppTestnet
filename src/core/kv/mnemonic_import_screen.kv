<MnemonicImportScreen>:
    MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "Import from Phrase"
        MDScrollView:
            size_hint: (1, .75)
            do_scroll_x: False
            do_scroll_y: True
            bar_color: rgba('#f9b233')
            
            MDGridLayout:
                cols: 1
                padding: "10dp"
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height

                MDLabel:
                    text: "Enter each word in order"
                    font_style: "Title"
                    theme_text_color: "Custom"
                    text_color: rgba('#202443')
                    halign: "center"
                    size_hint_y: None
                    height: "30dp"

                MDGridLayout:
                    cols: 2
                    spacing: "10dp"
                    size_hint_y: None
                    adaptive_height: True
                    
                    MDTextField:
                        id: word_01
                        hint_text: "1."
                        mode: "filled"
                        line_color_focus: rgba('#008D36')
                        hint_text_color_focus: rgba('#008D36')
                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"
                        on_text: root.on_first_word_text(self.text)
                        
                    MDTextField:
                        id: word_02
                        hint_text: "2."
                        mode: "filled"
                        line_color_focus: rgba('#008D36')
                        hint_text_color_focus: rgba('#008D36')
                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"
                        
                    MDTextField:
                        id: word_03
                        hint_text: "3."
                        mode: "filled"
                        line_color_focus: rgba('#008D36')
                        hint_text_color_focus: rgba('#008D36')
                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"
                        
                    MDTextField:
                        id: word_04
                        hint_text: "4."
                        mode: "filled"
                        line_color_focus: rgba('#008D36')
                        hint_text_color_focus: rgba('#008D36')
                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"
                        
                    MDTextField:
                        id: word_05
                        hint_text: "5."
                        mode: "filled"
                        line_color_focus: rgba('#008D36')
                        hint_text_color_focus: rgba('#008D36')
                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"
                        
                    MDTextField:
