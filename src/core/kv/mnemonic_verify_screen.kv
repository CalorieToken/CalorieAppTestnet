                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"

                MDLabel:
                    id: error_label
                    text: ""
                    theme_text_color: "Error"
                    halign: "center"
                    size_hint_y: None
                    height: "30dp"

                MDGridLayout:
                    cols: 3
                    size_hint_y: None
                    height: "60dp"

                    MDLabel:
                        size_hint: (4, 1)
                    MDButton:
                        id: verify_button
                        style: "filled"
                        size_hint: (2, None)
                        height: "52dp"
                        radius: [24]
                        md_bg_color: rgba('#505CA9')
                        on_release: root.verify_mnemonic()
                        MDButtonIcon:
                            icon: "check-circle"
                            icon_color: rgba('#f9b233')
                        MDButtonText:
                            text: "Verify & Continue"
                            text_color: rgba('#008D36')
                    MDLabel:
                        size_hint: (4, 1)

                MDLabel:
                    size_hint_y: None
                    height: "20dp"

        # Bottom navigation bar
        MDGridLayout:
            cols: 3
            size_hint: (1, .08)
            canvas.before:
                Color:
                    rgba: rgba('#505CA9')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: "arrow-left"
                theme_icon_size: "Custom"
                icon_size: "24sp"
                theme_icon_color: "Custom"
                icon_color: rgba('#008D36')
                size_hint: (.15, 1)
                pos_hint: {"center_y": .5}
                on_press: root.go_back()
                canvas.before:
                    Color:
                        rgba: rgba('#bfc6e0')
                    RoundedRectangle:
                        pos: self.pos[0] + dp(5), self.pos[1] + dp(5)
                        size: self.size[0] - dp(10), self.size[1] - dp(10)
                        radius: [dp(8)]
            MDLabel:
                size_hint: (.85, 1)

