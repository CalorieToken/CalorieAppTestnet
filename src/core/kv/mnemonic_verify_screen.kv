                        hint_text_color_focus: rgba('#008D36')
                        fill_color_normal: rgba('#dadeed')
                        fill_color_focus: rgba('#e9ebf5')
                        size_hint_y: None
                        height: "48dp"
                        
                    MDTextField:
                        id: word_05
