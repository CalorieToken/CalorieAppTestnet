<AccountNamingScreen>:
    ResponsiveContainer:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            title: "Name Your Account"
        MDGridLayout:
            cols: 1
            size_hint: (1, .75)

            MDLabel:
                size_hint: (1, .05)
            
            MDLabel:
                text: "Give this account a personal name"
                font_style: "Title"
                theme_text_color: "Custom"
                text_color: rgba('#202443')
                halign: "center"
                size_hint: (1, .1)

            MDLabel:
                id: address_label
                text: "Account: ..."
                font_style: "Label"
                theme_text_color: "Custom"
                text_color: rgba('#505CA9')
                halign: "center"
                size_hint: (1, .1)
                text_size: self.width, None
                markup: True

            MDLabel:
                size_hint: (1, .02)

            MDTextField:
                id: account_name_input
                hint_text: "Enter account name (e.g., Main Wallet, Trading Account)..."
                helper_text: "Choose a descriptive name to identify this wallet account"
                helper_text_mode: "on_focus"
                mode: "filled"
                line_color_focus: rgba('#008D36')
                hint_text_color_focus: rgba('#008D36')
                fill_color_normal: rgba('#dadeed')
                fill_color_focus: rgba('#e9ebf5')
                size_hint: (1, .15)

            MDLabel:
                size_hint: (1, .05)

            MDGridLayout:
                cols: 3
                size_hint: (1, .15)

                MDLabel:
                    size_hint: (4, 1)
                MDButton:
                    style: "filled"
                    size_hint: (2, None)
                    height: str(r.scale_dp(52))
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.save_account()
                    MDButtonIcon:
                        icon: "content-save"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Save Account"
                        text_color: rgba('#008D36')
                MDLabel:
                    size_hint: (4, 1)
            MDLabel:
                size_hint: (1, .35)

        BackBottomBar:
            callback: root.go_back

