<WalletSetupScreen>:   
    MDBoxLayout:
#:import r src.utils.responsive
<WalletSetupScreen>
    ResponsiveContainer:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "CalorieApp"
        MDGridLayout:
            cols: 1
            size_hint: (1, .75)

            MDLabel:
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                text: "Wallet Setup"
                font_style: "Title"
                halign: "center"
                theme_text_color: "Custom"
                text_color: rgba('#202443')
                size_hint: (1, .2)

            MDLabel:
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                size_hint: (1, .1)

            MDGridLayout:
                cols: 3
                size_hint: (1, .15)

                MDLabel:
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    size_hint: (4, 1)
                MDButton:
                    id: ws_create_wallet_button
                    style: "filled"
                    size_hint: (None, None)
                    width: r.scale_dp(BTN_W_XL)
                    height: r.scale_dp(52)
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.create_wallet_screen()
                    MDButtonIcon:
                        icon: "wallet-plus"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Create wallet"
                        text_color: rgba('#008D36')
                MDLabel:
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    size_hint: (4, 1)

            MDLabel:
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                size_hint: (1, .1)

            MDGridLayout:
                cols: 3
                size_hint: (1, .15)

                MDLabel:
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    size_hint: (4, 1)
                MDButton:
                    id: ws_import_wallet_button
                    style: "filled"
                    size_hint: (None, None)
                    width: r.scale_dp(BTN_W_XL)
                    height: r.scale_dp(52)
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.import_wallet_screen()
                    MDButtonIcon:
                        icon: "wallet"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Import wallet"
                        text_color: rgba('#008D36')
                MDLabel:
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    size_hint: (4, 1)
            MDLabel:
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                size_hint: (1, .3)

        BackBottomBar:
            callback: lambda *args: setattr(root.manager, 'current', 'intro_screen')

