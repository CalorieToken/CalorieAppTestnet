#:import r src.utils.responsive
<NFTMintScreen>:
    ResponsiveContainer:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "Mint NFT"
        ContentScroll:
            ContentSection:
                SectionHeader:
                    text: "NFT Minter"
                ContentCard:
                    md_bg_color: CAL_BG_LIGHT
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: [SP_MD, SP_MD]
                        spacing: SP_SM
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            text: "Create an NFT on XRPL"
                            font_style: "Title"
                            theme_text_color: "Custom"
                            text_color: CAL_TEXT_DARK
                            halign: "center"
                            size_hint_y: None
                            adaptive_height: True
                
                SectionHeader:
                    text: "NFT Details"
                ContentCard:
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: [SP_MD, SP_MD]
                        spacing: SP_MD
                        
                        MDTextField:
                            id: nft_uri
                            hint_text: "Enter URI Link"
                            mode: "filled"
                            line_color_focus: rgba('#008D36')
                            hint_text_color_focus: rgba('#008D36')
                            fill_color_normal: rgba('#dadeed')
                            fill_color_focus: rgba('#e9ebf5')
                            size_hint_y: None
                            height: r.scale_dp(56)
                            multiline: False
                            helper_text: "URL pointing to NFT metadata"
                            helper_text_mode: "on_focus"
                        
                        MDTextField:
                            id: nft_taxon
                            hint_text: "Enter Taxon (Collection ID)"
                            mode: "filled"
                            line_color_focus: rgba('#008D36')
                            hint_text_color_focus: rgba('#008D36')
                            fill_color_normal: rgba('#dadeed')
                            fill_color_focus: rgba('#e9ebf5')
                            size_hint_y: None
                            height: r.scale_dp(56)
                            multiline: False
                            helper_text: "Optional: Group similar NFTs"
                            helper_text_mode: "on_focus"
                        
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            size_hint_y: None
                            height: r.scale_dp(10)
                        
                        PrimaryButtonFixed:
                            width: dp(BTN_W_MD)
                            pos_hint: {"center_x": 0.5}
                            on_release: root.mint()
                            MDButtonIcon:
                                icon: "brush"
                                icon_color: CAL_YELLOW
                            MDButtonText:
                                text: "Mint NFT"
                                text_color: CAL_GREEN
                        
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            id: input_error
                            text: ""
                            font_style: "Body"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: rgba('#e74c3c')
                            size_hint_y: None
                            adaptive_height: True
        PrimaryBottomBar:
