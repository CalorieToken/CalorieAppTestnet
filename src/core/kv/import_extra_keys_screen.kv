#:import r src.utils.responsive
<ImportExtraKeysScreen>:
    invalid_keys: invalid_keys
    ResponsiveContainer:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            title: "Import Extra Keys"
        ContentScroll:
            ContentSection:
                SectionHeader:
                    text: "Instructions"
                ContentCard:
                    md_bg_color: CAL_BG_LIGHT
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: [SP_MD, SP_MD]
                        spacing: SP_SM
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            text: "Import your XRPL wallet"
                            font_style: "Title"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: CAL_TEXT_DARK
                SectionHeader:
                    text: "Keys"
                ContentCard:
                    md_bg_color: CAL_WHITE
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: [SP_MD, SP_MD]
                        spacing: SP_SM
                        MDBoxLayout:
                            size_hint_y: None
                            height: r.scale_dp(48)
                            spacing: SP_SM
                            MDLabel:
                                text_size: self.width, None
                                size_hint_y: None
                                height: self.texture_size[1]
                                text: "Public key:"
                                size_hint_x: 0.3
                                theme_text_color: "Custom"
                                text_color: CAL_TEXT_DARK
                            MDTextField:
                                mode: "filled"
                                line_color_focus: CAL_GREEN
                                hint_text_color_focus: CAL_GREEN
                                fill_color_normal: CAL_BG_MID
                                fill_color_focus: CAL_BG_LIGHT
                                id: public_key
                                hint_text: "Enter your public key"
                                helper_text: "XRPL public address (starts with 'r')"
                                helper_text_mode: "on_focus"
                                multiline: False
                        MDBoxLayout:
                            size_hint_y: None
                            height: r.scale_dp(48)
                            spacing: SP_SM
                            MDLabel:
                                text_size: self.width, None
                                size_hint_y: None
                                height: self.texture_size[1]
                                text: "Private key:"
                                size_hint_x: 0.3
                                theme_text_color: "Custom"
                                text_color: CAL_TEXT_DARK
                            MDTextField:
                                mode: "filled"
                                line_color_focus: CAL_GREEN
                                hint_text_color_focus: CAL_GREEN
                                fill_color_normal: CAL_BG_MID
                                fill_color_focus: CAL_BG_LIGHT
                                id: private_key
                                hint_text: "Enter your private key"
                                helper_text: "Your secret key (keep secure, never share)"
                                password: True
                                helper_text_mode: "on_focus"
                                multiline: False
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                            id: invalid_keys
                            theme_text_color: "Custom"
                            text_color: CAL_BLUE
                            halign: "center"
                            size_hint_y: None
                            height: r.scale_dp(20)
                SectionHeader:
                    text: "Actions"
                ContentCard:
                    md_bg_color: CAL_BG_LIGHT
                    MDBoxLayout:
                        orientation: "horizontal"
                        padding: [SP_MD, SP_MD]
                        spacing: SP_SM
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
                        PrimaryButton:
                            id: store_button
                            size_hint: (None, None)
                            width: r.scale_dp(BTN_W_XL)
                            height: r.scale_dp(52)
                            on_release: root.store_keys()
                            MDButtonIcon:
                                icon: "lock-check"
                                icon_color: CAL_YELLOW
                            MDButtonText:
                                text: "Store Keys"
                                text_color: CAL_GREEN
                        MDLabel:
                            text_size: self.width, None
                            size_hint_y: None
                            height: self.texture_size[1]
        PrimaryBottomBar:

