#:import r src.utils.responsive
<AccountChoiceScreen>:
    ResponsiveContainer:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "Account Choice"
        MDGridLayout:
            cols: 1
            size_hint: (1, .75)
            MDLabel:
                id: title_label
                text: "Welcome! Let's set up your first wallet"
                text_size: self.width, None
                font_style: "Title"
                halign: "center"
                theme_text_color: "Custom"
                text_color: rgba('#202443')
                size_hint_y: None
                height: "40dp"
            MDLabel:
                size_hint_y: None
                height: "16dp"
            MDGridLayout:
                cols: 3
                size_hint_y: None
                height: "56dp"
                MDLabel:
                    size_hint: (4, 1)
                MDButton:
                    id: create_account_button
                    style: "filled"
                    size_hint: (None, None)
                    width: dp(BTN_W_XXL)
                    height: "52dp"
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.choose_create()
                    MDButtonIcon:
                        icon: "wallet-plus"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Create New Account"
                        text_color: rgba('#008D36')
                MDLabel:
                    size_hint: (4, 1)
            MDLabel:
                size_hint_y: None
                height: "12dp"
            MDGridLayout:
                cols: 3
                size_hint_y: None
                height: "56dp"
                MDLabel:
                    size_hint: (4, 1)
                MDButton:
                    id: import_account_button
                    style: "filled"
                    size_hint: (None, None)
                    width: dp(BTN_W_XXL)
                    height: "52dp"
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.choose_import()
                    MDButtonIcon:
                        icon: "wallet"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Import Existing Account"
                        text_color: rgba('#008D36')
                MDLabel:
                    size_hint: (4, 1)
            MDLabel:
                size_hint_y: None
                height: "32dp"
        MDGridLayout:
            cols: 3
            size_hint: (1, .08)
            opacity: 1 if root.show_back_button else 0
            disabled: not root.show_back_button
            canvas.before:
                Color:
                    rgba: rgba('#505CA9')
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDIconButton:
                theme_icon_size: "Custom"
                icon_size: "24sp"
                theme_icon_color: "Custom"
                icon_color: rgba('#008D36')
                size_hint: (.15, 1)
                pos_hint: {"center_y": .5}
                on_press: root.go_back()
                canvas.before:
                    Color:
                        rgba: rgba('#bfc6e0')
                    RoundedRectangle:
                        pos: self.pos[0] + dp(5), self.pos[1] + dp(5)
                        size: self.size[0] - dp(10), self.size[1] - dp(10)
                        radius: [dp(8)]
                MDButtonIcon:
                    icon: "arrow-left"
            MDLabel:
                size_hint: (.85, 1)

