<AddTrustlineScreen>:
    MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        
        AppHeader:
            id: app_header
            title: "Add Trustline"
        
        # Main content
        MDScrollView:
            size_hint: (1, .75)
            do_scroll_x: False
            do_scroll_y: True
            bar_color: rgba('#f9b233')
            
            MDGridLayout:
                cols: 1
                padding: "20dp"
                spacing: "15dp"
                size_hint_y: None
                height: self.minimum_height
                
                MDLabel:
                    text: "Create a trustline to receive test tokens"
                    font_style: "Body"
                    theme_text_color: "Custom"
                    text_color: rgba('#202443')
                    halign: "center"
                    size_hint_y: None
                    height: "30dp"
                
                MDLabel:
                    text: ""
                    size_hint_y: None
                    height: "10dp"
                
                MDTextField:
                    id: currency_code_input
                    hint_text: "Currency Code (e.g., USD, EUR, TOKEN)"
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    size_hint_y: None
                    height: "56dp"
                    helper_text: "3-character currency code or custom name"
                    helper_text_mode: "on_focus"
                
                MDTextField:
                    id: issuer_address_input
                    hint_text: "Issuer Address (starts with 'r')"
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    size_hint_y: None
                    height: "56dp"
                    helper_text: "The XRPL address that issues this token"
                    helper_text_mode: "on_focus"
                
                MDTextField:
                    id: limit_input
                    hint_text: "Trust Limit (optional, default: 1,000,000,000)"
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    size_hint_y: None
                    height: "56dp"
                    input_filter: "float"
                    helper_text: "Maximum amount you can hold"
                    helper_text_mode: "on_focus"
                
                MDLabel:
                    text: ""
                    size_hint_y: None
                    height: "20dp"
                
                MDButton:
                    style: "filled"
                    size_hint: (None, None)
                    width: dp(240)
                    height: "52dp"
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    pos_hint: {"center_x": 0.5}
                    on_release: root.add_trustline()
                    MDButtonIcon:
                        icon: "plus-circle"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Create Trustline"
                        text_color: rgba('#008D36')
                
                MDLabel:
                    text: ""
                    size_hint_y: None
                    height: "100dp"
        
        # Bottom navigation bar
        MDGridLayout:
            cols: 3
            size_hint: (1, .08)
            canvas.before:
                Color:
                    rgba: rgba('#505CA9')
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            MDIconButton:
                icon: "arrow-left"
                theme_icon_size: "Custom"
                icon_size: "24sp"
                theme_icon_color: "Custom"
                icon_color: rgba('#008D36')
                size_hint: (.15, 1)
                pos_hint: {"center_y": .5}
                on_press: root.go_back()
                canvas.before:
                    Color:
                        rgba: rgba('#bfc6e0')
                    RoundedRectangle:
                        pos: self.pos[0] + dp(5), self.pos[1] + dp(5)
                        size: self.size[0] - dp(10), self.size[1] - dp(10)
                        radius: [dp(8)]
            MDLabel:
                size_hint: (.85, 1)

