<SettingsScreen>
    MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        AppHeader:
            id: app_header
            title: "Settings"
        MDGridLayout:
            cols: 1
            size_hint: (1, .75)
            MDLabel:
                text: "Accounts"
                font_style: "Title"
                theme_text_color: "Custom"
                text_color: rgba('#202443')
                halign: 'center'
                size_hint: (1, .12)

            ContentCard:
                md_bg_color: rgba('#dadeed')
                elevation: 2
                size_hint: (0.92, .55)
                pos_hint: {"center_x": .5}

                MDBoxLayout:
                    orientation: "vertical"
                    padding: "8dp"
                    spacing: "4dp"

                    MDScrollView:
                        MDList:
                            id: accounts_list

            MDGridLayout:
                cols: 3
                size_hint: (1, .13)

                MDLabel:
                    size_hint: (4, 1)
                MDButton:
                    style: "filled"
                    size_hint: (2, None)
                    height: "52dp"
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.refresh_account_list()
                    MDButtonIcon:
                        icon: "refresh"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Refresh"
                        text_color: rgba('#008D36')
                MDLabel:
                    size_hint: (4, 1)
        PrimaryBottomBar:
