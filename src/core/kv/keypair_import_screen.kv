<KeypairImportScreen>:
    MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgba('#bfc6e0')
            Rectangle:
                pos: self.pos
                size: self.size
        MDBoxLayout:
            size_hint: (1, None)
            height: "56dp"
            orientation: "horizontal"
            padding: ["8dp", "8dp"]
            spacing: "8dp"
            canvas.before:
                Color:
                    rgba: rgba('#505CA9')
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                size_hint: (None, None)
                size: ("44dp", "44dp")
            MDLabel:
                id: header_label
                text: "Import Keys"
                theme_text_color: "Custom"
                text_color: rgba('#ffffff')
                halign: 'center'
                valign: 'center'
                font_size: '18sp'
                size_hint_x: 1
            MDCard:
                size_hint: (None, None)
                size: ("40dp", "40dp")
                radius: [20,]
                md_bg_color: rgba('#e8ebf5')
                elevation: 0
                padding: "4dp"
                pos_hint: {"center_y": 0.5}
                Image:
                    source: 'assets/images/CalorieLogoTranspa.png'
                    size_hint: (1, 1)
                    mipmap: True
        MDGridLayout:
            cols: 1
            size_hint: (1, .75)

            MDLabel:
                size_hint: (1, .05)

            MDLabel:
                text: "Enter your Public and Private keys"
                font_style: "Title"
                theme_text_color: "Custom"
                text_color: rgba('#202443')
                halign: "center"
                size_hint: (1, .1)

            MDLabel:
                size_hint: (1, .05)

            MDGridLayout:
                cols: 12
                size_hint: (1, .12)
                spacing: "6dp"
                MDTextField:
                    id: public_key_input
                    hint_text: "Public Key"
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    size_hint_x: 0.86
                MDIconButton:
                    icon: "content-paste"
                    theme_icon_color: "Custom"
                    icon_color: rgba('#505CA9')
                    size_hint_x: 0.07
                    on_press: root.paste_public_key()
                MDIconButton:
                    icon: "content-copy"
                    theme_icon_color: "Custom"
                    icon_color: rgba('#f9b233')
                    size_hint_x: 0.07
                    on_press: root.copy_public_key()

            MDLabel:
                size_hint: (1, .02)

            MDGridLayout:
                cols: 12
                size_hint: (1, .12)
                spacing: "6dp"
                MDTextField:
                    id: private_key_input
                    hint_text: "Private Key"
                    mode: "filled"
                    line_color_focus: rgba('#008D36')
                    hint_text_color_focus: rgba('#008D36')
                    fill_color_normal: rgba('#dadeed')
                    fill_color_focus: rgba('#e9ebf5')
                    size_hint_x: 0.86
                MDIconButton:
                    icon: "content-paste"
                    theme_icon_color: "Custom"
                    icon_color: rgba('#505CA9')
                    size_hint_x: 0.07
                    on_press: root.paste_private_key()
                MDIconButton:
                    icon: "content-copy"
                    theme_icon_color: "Custom"
                    icon_color: rgba('#f9b233')
                    size_hint_x: 0.07
                    on_press: root.copy_private_key()

            MDLabel:
                id: key_action_status
                text: ""
                theme_text_color: "Secondary"
                halign: "center"
                size_hint: (1, .05)

            MDLabel:
                size_hint: (1, .05)

            MDGridLayout:
                cols: 3
                size_hint: (1, .15)

                MDLabel:
                    size_hint: (4, 1)
                MDButton:
                    id: import_button
                    style: "filled"
                    size_hint: (2, None)
                    height: "52dp"
                    radius: [24]
                    md_bg_color: rgba('#505CA9')
                    on_release: root.import_from_keypair()
                    MDButtonIcon:
                        icon: "key"
                        icon_color: rgba('#f9b233')
                    MDButtonText:
                        text: "Import Account"
                        text_color: rgba('#008D36')
                MDLabel:
                    size_hint: (4, 1)
            MDLabel:
                size_hint: (1, .29)

        # Bottom navigation bar
        MDGridLayout:
            cols: 3
            size_hint: (1, .08)
            canvas.before:
                Color:
                    rgba: rgba('#505CA9')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: "arrow-left"
                theme_icon_size: "Custom"
                icon_size: "24sp"
                theme_icon_color: "Custom"
                icon_color: rgba('#008D36')
                size_hint: (.15, 1)
                pos_hint: {"center_y": .5}
                on_press: root.go_back()
                canvas.before:
                    Color:
                        rgba: rgba('#bfc6e0')
                    RoundedRectangle:
                        pos: self.pos[0] + dp(5), self.pos[1] + dp(5)
                        size: self.size[0] - dp(10), self.size[1] - dp(10)
                        radius: [dp(8)]
            MDLabel:
                size_hint: (.85, 1)

